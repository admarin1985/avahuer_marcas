{% trans_default_domain 'FOSUserBundle' %}

<div class="login_page_wrapper">
    <div class="md-card" id="login_card">
        <div class="md-card-content large-padding" id="login_form">
            <div class="login_heading">
                <div class="user_avatar"></div>
            </div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('fos_user_security_logout') }}" class="uk-close"> </a>
                {% else %}
                    <form action="{{ path("fos_user_security_check") }}" method="post" id="login-form">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% endif %}
                        <div class="uk-form-row">
                            <label for="login_username">Nombre de usuario</label>
                            <input type="text" class="md-input" id="username" name="_username" value="{{ last_username }}" required="required"/>
                        </div>
                        <div class="uk-form-row">
                            <label for="login_password">Contrase√±a</label>
                            <input type="password" class="md-input" id="password" name="_password" required="required"/>
                        </div>
                        <div class="uk-margin-medium-top">
                            <a href="#signin" class="md-btn md-btn-primary md-btn-block md-btn-large">Entrar</a>
                        </div>
                    </form>
                    <a id="login_error" class="hidden-md" hidden="hidden" data-message="{% trans from 'messages' %}user.login_error{% endtrans %}" data-status="danger" data-pos="top-center">
                        Pepe
                    </a>
                {% endif %}
        </div>
    </div>
</div>