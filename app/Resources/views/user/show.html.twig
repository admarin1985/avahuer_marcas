{% extends 'base.html.twig' %}

{% block page_title %}Ver datos de usuario{% endblock %}

{% block title %}Ver datos de usuario{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-body">
                    <div class="tabbable">
                        <div class="form-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <th>Usuario</th>
                                    <td>{{ user.username|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>Â¿Activo?</th>
                                    {% if user.enabled %}
                                        {% set badge = 'primary' %}
                                        {% set text_color = 'primary' %}
                                        {% set status_type = 'Si' %}
                                    {% else %}
                                        {% set badge = 'danger' %}
                                        {% set text_color = 'danger' %}
                                        {% set status_type = 'No' %}
                                    {% endif %}
                                    <td class="text-{{ text_color }}"><span
                                                class="label label-{{ badge }}">{{ status_type | upper }}</span>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12" id="button_actions">
                            <a class="btn btn-primary btn-sm" href="{{ path('user_edit', { 'id': user.id }) }}">
                                <i class="fa fa-edit"></i> Editar</a>
                            <a class="btn btn-default btn-sm" href="{{ path('user_index') }}">
                                <i class="fa fa-chevron-left"></i> Listado</a>
                            <a {% if app.user and app.user.username == user.username %}disabled{% endif %} {% if app.user and app.user.username != user.username %}data-id="{{ user.id }}"
                                data-action="user_delete"{% endif %}
                               class="btn btn-danger btn-sm {% if app.user and app.user.username != user.username %}delete-selection{% endif %}"
                               href="javascript:;">
                                <i class="fa fa-trash"></i> Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        AppManage.init(["{{ 'user.label'|trans }}"]);
    </script>
{% endblock %}